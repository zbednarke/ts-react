{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",                                
    "module": "commonjs",                          
    "outDir": "dist",                                
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "skipLibCheck": true,
    "strictNullChecks": true                             
  },
  "include": ["src/**/*"]
}
